/* components/city-selector/city-selector.wxss */
/* 城市选择器组件样式 - 基于UI设计 */

.city-selector {
  position: relative;
  height: 140rpx;
  margin: var(--spacing-lg) var(--spacing-lg) var(--spacing-md);
  border-radius: var(--radius-2xl);
  overflow: hidden;
  cursor: pointer;
}

.city-selector__background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, var(--color-secondary) 0%, var(--color-primary) 100%);
  opacity: 0.9;
}

.city-selector__content {
  position: relative;
  display: flex;
  align-items: center;
  height: 100%;
  padding: 0 var(--spacing-xl);
  z-index: 1;
}

.city-selector__icon {
  margin-right: var(--spacing-md);
}

.city-selector__location-icon {
  font-size: 48rpx;
  filter: grayscale(100%) brightness(0) invert(1);
}

.city-selector__info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.city-selector__title {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  line-height: 1.2;
}

.city-selector__subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.2;
}

.city-selector__chevron {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: bold;
  transform: rotate(90deg);
  transition: transform var(--transition-base);
}

.city-selector:active {
  transform: scale(0.98);
  transition: transform var(--transition-fast);
}

.city-selector:active .city-selector__chevron {
  transform: rotate(90deg) scale(1.1);
}
