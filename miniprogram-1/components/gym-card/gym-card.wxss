/* components/gym-card/gym-card.wxss */
/* 场馆卡片组件样式 - 基于UI设计 */

.gym-card {
  background: white;
  border-radius: var(--radius-2xl);
  overflow: hidden;
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-base);
}

.gym-card:active {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-md);
}

.gym-card__image {
  position: relative;
  height: 320rpx;
  overflow: hidden;
}

.gym-card__img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.gym-card__badge {
  position: absolute;
  top: var(--spacing-md);
  right: var(--spacing-md);
  padding: var(--spacing-xs) var(--spacing-md);
  border-radius: var(--radius-full);
  font-size: 24rpx;
  font-weight: 600;
  color: white;
}

.gym-card__badge--crossfit {
  background: var(--color-accent);
}

.gym-card__badge--premium {
  background: var(--color-secondary);
}

.gym-card__badge--partner {
  background: var(--color-success);
}

.gym-card__content {
  padding: var(--spacing-lg);
}

.gym-card__header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--spacing-sm);
}

.gym-card__name {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-gray-900);
  line-height: 1.3;
  margin-right: var(--spacing-md);
}

.gym-card__rating {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.gym-card__rating-star {
  font-size: 28rpx;
  color: var(--color-accent);
}

.gym-card__rating-score {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--color-gray-700);
}

.gym-card__location {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-sm);
  gap: var(--spacing-sm);
}

.gym-card__location-icon {
  font-size: 24rpx;
  color: var(--color-secondary);
}

.gym-card__location-text {
  flex: 1;
  font-size: 26rpx;
  color: var(--color-gray-600);
  line-height: 1.3;
}

.gym-card__distance {
  font-size: 24rpx;
  color: var(--color-gray-500);
  font-weight: 500;
}

.gym-card__status {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-md);
  gap: var(--spacing-sm);
}

.gym-card__status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: var(--color-gray-400);
}

.gym-card__status--open .gym-card__status-dot {
  background: var(--color-success);
}

.gym-card__status--closed .gym-card__status-dot {
  background: var(--color-danger);
}

.gym-card__status--full .gym-card__status-dot {
  background: var(--color-warning);
}

.gym-card__status-text,
.gym-card__hours {
  font-size: 24rpx;
  color: var(--color-gray-500);
}

.gym-card__tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
}

.gym-card__tag {
  padding: var(--spacing-xs) var(--spacing-md);
  background: var(--color-gray-100);
  border-radius: var(--radius-full);
  font-size: 22rpx;
  color: var(--color-gray-600);
  font-weight: 500;
}
