.icon-sm { font-size: 14px; line-height: 1; vertical-align: middle; }
.icon-md { font-size: 16px; line-height: 1; vertical-align: middle; }
.icon-lg { font-size: 20px; line-height: 1; vertical-align: middle; }
.icon-xl { font-size: 24px; line-height: 1; vertical-align: middle; }
.icon-2xl { font-size: 32px; line-height: 1; vertical-align: middle; }

/* Remixicon图标系统 - 直接在text元素中显示 */
/* 图标基础样式 */
[class^="ri-"],
[class*=" ri-"] {
  display: inline-block;
  line-height: 1;
  vertical-align: middle;
  font-style: normal;
}

