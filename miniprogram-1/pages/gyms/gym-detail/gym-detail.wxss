/* pages/gyms/gym-detail/gym-detail.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 80px;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200px;
  color: #999;
}

/* 图片轮播 */
.image-swiper {
  height: 250px;
  width: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.default-image {
  height: 250px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f0f0f0;
  color: #999;
}

/* 场馆信息 */
.gym-info {
  background: #fff;
  padding: 20px;
  margin-bottom: 10px;
}

.gym-header {
  margin-bottom: 12px;
}

.gym-name {
  font-size: 20px;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8px;
}

.gym-tags {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.gym-tag {
  font-size: 11px;
  padding: 3px 8px;
  border-radius: 10px;
  background: #f0f0f0;
  color: #666;
}

.tag-crossfit {
  background: #fff0f6;
  color: #c41d7f;
}

.gym-rating {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 12px;
}

.rating-stars {
  color: #ffa940;
  font-size: 14px;
}

.rating-text {
  font-size: 13px;
  color: #666;
}

.gym-status {
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 10px;
  margin-left: auto;
}

.status-open {
  background: #f6ffed;
  color: #52c41a;
}

.status-closed {
  background: #fff2e8;
  color: #fa8c16;
}

.gym-address {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
  padding: 8px 0;
}

.address-icon {
  margin-right: 8px;
  font-size: 14px;
}

.address-text {
  flex: 1;
  font-size: 14px;
  color: #666;
  line-height: 1.4;
}

.distance {
  font-size: 12px;
  color: #999;
  margin-left: 8px;
}

.gym-contact {
  display: flex;
  align-items: center;
  padding: 8px 0;
}

.contact-icon {
  margin-right: 8px;
  font-size: 14px;
}

.contact-text {
  font-size: 14px;
  color: #1890ff;
}

/* 内容区块 */
.section {
  background: #fff;
  margin-bottom: 10px;
  padding: 20px;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 12px;
}

/* 营业时间 */
.opening-hours {
  margin-top: 8px;
}

.today-hours {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 0;
}

.day {
  font-size: 14px;
  color: #333;
  font-weight: 500;
}

.hours {
  font-size: 14px;
  color: #666;
}

/* 设施和课程 */
.facilities,
.programs {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.facility-item,
.program-item {
  font-size: 13px;
  padding: 6px 12px;
  background: #f8f9fa;
  border-radius: 16px;
  color: #666;
  border: 1px solid #e9ecef;
}

/* 场馆介绍 */
.description {
  font-size: 14px;
  color: #666;
  line-height: 1.6;
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 12px 20px;
  border-top: 1px solid #eee;
  box-shadow: 0 -2px 8px rgba(0,0,0,0.06);
}

.book-button {
  width: 100%;
  height: 48px;
  background: #ff4d4f;
  color: #fff;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 600;
}

.book-button:active {
  background: #d73027;
}